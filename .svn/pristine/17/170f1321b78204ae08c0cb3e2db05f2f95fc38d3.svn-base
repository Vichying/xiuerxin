  <script>
    // 判断当前系统
    function Mobile() {
      var u = navigator.userAgent;
      if (!!u.match(/\(i[^;]+;( U;)? CPU.+Mac OS X/)) {
        return 'ios';
      }
    }

    window.onload = function () {
      var swiperList = $('.swiper-slide');
      var videoList = $('video');
      if (Mobile() == 'ios') {
        for (var i = 0; i < swiperList.length; i++) {
          swiperList[i].style.backgroundRepeat = 'no-repeat';
          swiperList[i].style.backgroundSize = '100% 100%';
        }
        for (var i = 0; i < videoList.length; i++) {
          videoList[i].style.display = 'none';
        }
      }
      var Video1 = document.getElementById('video1');
      var Video2 = document.getElementById('video2');
      var Video3 = document.getElementById('video3');
      var Video4 = document.getElementById('video4');
      var Video5 = document.getElementById('video5');
      var Video6 = document.getElementById('video6');
      var Video7 = document.getElementById('video7');
      Video1.play();
    };
    var height = window.screen.height;
    var width = window.screen.width;
    if (Mobile() == 'ios') {
      $('.swiper-container').css('height', height)
    } else {
      $('body').css('height', '100%');
      $('html').css('height', '100%');
    }
    var swiper = new Swiper('.swiper-container', {
      mode: 'vertical',
      direction: 'vertical',
      pagination: '.pagination',
      slidesPerView: 1,
      paginationClickable: true,
      spaceBetween: 30,
      mousewheelControl: true,
      autoplay: 5000,//可选选项，自动滑动
      // autoplay: false,//可选选项，不自动滑动
      loop: true,//可选选项，开启循环
      autoplayDisableOnInteraction: false,
      onSlideChangeStart: function (swiper) {
        if (Mobile() == 'ios') {
          return;
        }
        var index = swiper.activeIndex;
        if (index == 1 || index == 8) {
          window.video1[0].currentTime = 0;
          window.video1[0].play();
          window.video1[1].currentTime = 0;
          window.video1[1].play();
        } else if (index == 2) {
          window.video2.currentTime = 0;
          window.video2.play();
        } else if (index == 3) {
          window.video3.currentTime = 0;
          window.video3.play();
        } else if (index == 4) {
          window.video4.currentTime = 0;
          window.video4.play();
        } else if (index == 5) {
          window.video5.currentTime = 0;
          window.video5.play();
        } else if (index == 6) {
          window.video6.currentTime = 0;
          window.video6.play();
        } else if (index == 7) {
          window.video7[0].currentTime = 0;
          window.video7[0].play();
          window.video7[1].currentTime = 0;
          window.video7[1].play();
        }
      },
    });


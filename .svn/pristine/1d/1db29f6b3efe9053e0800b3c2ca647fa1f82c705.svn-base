<script>
  // 支付方式   1--支付宝，2--微信
  let payType = 1
  function zfbzfFn(){
    payType = 1
    $("#radiozfbzf1").show()
    $("#radiozfbzf2").hide()
    $("#radiowxzf1").hide()
    $("#radiowxzf2").show()
  }
  function wxzfFn(){
    payType = 2
    $("#radiozfbzf1").hide()
    $("#radiozfbzf2").show()
    $("#radiowxzf1").show()
    $("#radiowxzf2").hide()
  }

  function nextStepFour(){
    if(payType == 1){
      window.location.href = "./wxZfbPay.html?payType=1"
    }else if(payType == 2){
      window.location.href = "./wxZfbPay.html?payType=2"
    }
  }
</script>